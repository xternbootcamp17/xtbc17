body[data-url="/setup-mac/terminal/"],
body[data-url="/setup-windows/terminal/"]
  h1
    display none
  .page-heading {
    font-family "Operator Mono A", "Operator Mono B", "Fira Mono", Consolas, Monaco, "Andale Mono", "Ubuntu Mono", monospace;
    font-size 4rem
    background-color: #590df6;
    background-image: url(/images/y-pattern.png),
      linear-gradient(34deg, #010efd 0%, #fe0c00 100%);
  }

body[data-url="/tools/code-extensions/"],
body[data-url="/tools/code-keybindings/"]
  h1
    display none

body[data-url="/setup-mac/editor/"],
body[data-url="/setup-windows/editor/"],
body[data-url="/tools/code-extensions/"],
body[data-url="/tools/code-keybindings/"]
